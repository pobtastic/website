<style>
  .article__container {
    container-type: inline-size;
  }

  .article {
    display: grid;
    gap: 2lh;

    @container (min-width: 900px) {
      grid-template-columns: 2fr 1fr;
    }
  }

  .article__role {
    font-style: italic;
    margin-block-end: 0.5lh;
    opacity: 0.5;
  }

  .article__date {
    opacity: 0.5;
    margin-block-start: 0.5lh;
    font-size: 14px;
  }

  .article__header {
    @container (min-width: 900px) {
      grid-column: span 2;
    }
  }

  .article__content {
  }

  .article__toc {
    display: none;

    @container (min-width: 900px) {
      display: block;
      align-self: start;
      position: sticky;
      top: 1lh;
    }
  }

  .article__toc-title {
    font-weight: 600;
    margin-block-end: 0.5lh;
  }

  .article__toc-list {
    box-shadow: 0 0 0 1px var(--color-border);
    background-color: var(--color-border);
    border-radius: var(--br);
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1px;
    overflow: clip;

    scroll-target-group: auto;
  }

  .article__toc-item {
  }

  .article__toc-link {
    display: block;
    padding: calc(0.5lh - 1px) 0.5lh 0.5lh;
    background-color: var(--color-bg);

    &:hover {
      background-color: var(--color-border);
    }

    &:target-current {
      background-color: var(--color-border);
    }
  }

  .socials {
    list-style: none;
    display: flex;
    gap: 0.25lh;
  }

  .socials__link {
    background-color: var(--color-border);
    padding: 0.5lh;
    border-radius: var(--br);
    display: flex;
    gap: 0.25lh;
    justify-content: center;
    align-items: center;
    font-size: 14px;

    @container (min-width: 900px) {
      padding: 0.25lh 0.5lh;
    }

    &:hover {
      background-color: var(--color-accent);
      color: var(--color-bg);
    }
  }

  .socials__icon {
    width: var(--fz);
    height: var(--fz);
  }

  .socials__label {
    display: none;

    @container (min-width: 900px) {
      display: block;
    }
  }
</style>

<style is:global>
  .article__content {
    > * {
      margin-block-end: 1lh;
    }

    * + h2 {
      margin-block-start: 2lh;
    }

    img {
      border-radius: var(--br);
      box-shadow: 0 0 0 4px var(--color-border);
    }

    ul,
    ol {
      margin-inline-start: 1lh;
    }
  }
</style>
