---
interface Props {
  href: string;
  text: string;
  rel?: string;
  "data-astro-prefetch"?: boolean | string;
}

const { href, text, rel = "me", ...rest } = Astro.props;
---

<a href={href} class="button" rel={rel} {...rest}>
  {text}
</a>

<style>
  .button {
    border-radius: var(--br);
    padding: calc(var(--lh) * 0.5) calc(var(--lh) * 0.75);
    width: fit-content;
    color: var(--color-bg-contrast);
    background-color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: calc(var(--lh) / 2);

    &:hover {
      background-color: var(--color-accent-light);
    }
  }

  .button__icon {
    width: var(--lh);
    height: var(--lh);
  }
</style>
